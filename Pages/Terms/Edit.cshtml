@page
@model GradeMaker.Pages.Terms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ClassroomTerm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassroomTerm.ClassroomTermID" />
            <div class="form-group">
                <label asp-for="ClassroomTerm.ClassroomID" class="control-label"></label>
                <select asp-for="ClassroomTerm.ClassroomID" class="form-control" asp-items="ViewBag.ClassroomID"></select>
                <span asp-validation-for="ClassroomTerm.ClassroomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassroomTerm.ClassroomTermName" class="control-label"></label>
                <input asp-for="ClassroomTerm.ClassroomTermName" class="form-control" />
                <span asp-validation-for="ClassroomTerm.ClassroomTermName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-classroomid="@Model.ClassroomTerm.ClassroomID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
