@page "{studentid}"
@model GradeMaker.Pages.Enrollments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Classroom
            </th>
            <th>
                Classroom Term
            </th>
            <th>
                Grading Section
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments[0].EnrollmentItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollments[0].Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enrollments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassroomTerm.Classroom.ClassName)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.ClassroomTerm.ClassroomTermName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.EnrollmentItem.GradingSection.Name)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstMidName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EnrollmentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EnrollmentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
